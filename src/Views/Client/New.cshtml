@model ClientViewModel
@{
    Title = "Create client";
    Back = Url.Action<ClientController>(c => c.Index(null, null));
}

    <div class="container my-3">
        @using (Html.BeginForm(nameof(ClientController.Insert), null, FormMethod.Post, new { autocomplete = "off", data_turboform = "", novalidate = "" })) {            
            @Html.EditorsForModel()
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary btn-load" title="Save">Save</button>
                <a href="@Back" class="btn btn-outline-secondary mr-auto">Cancel</a>
            </div>
        }
    </div>
